doctype html
html
  head
    meta(charset='utf-8')
    title Home Page (Logged In)
  body
    h1 Welcome, #{user}!
    a(href="/logout") Logout
    form(action='/write' method='post')
      p
        input(
          type='text' 
          name='title' 
          placeholder='글 제목을 입력하세요' 
          value=posts.length > 0 ? posts[posts.length - 1].title : ''
        )
      p
        textarea(
          name='content' 
          rows='10' 
          cols='50'
        )= posts.length > 0 ? posts[posts.length - 1].content : ''
      p
        input(type='submit' value='글 작성')
